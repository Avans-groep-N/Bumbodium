@model InputModel

<h2>Register</h2>

<div class="row">
    <div class="col-md-4">
        <form action="/Account/Register" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="col-form-label-lg">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="col-form-label-lg">
                <label asp-for="Password">Password, must contain an uppercase letter, a number and a different character</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="col-form-label-lg">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="col-form-label-lg">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="col-form-label-lg">
                <label asp-for="MiddleName"></label>
                <input asp-for="MiddleName" class="form-control" />
                <span asp-validation-for="MiddleName" class="text-danger"></span>
            </div>
            <div class="col-form-label-lg">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="col-form-label-lg">
                <label asp-for="Birthday"></label>
                <input asp-for="Birthday" class="form-control" />
                <span asp-validation-for="Birthday" class="text-danger"></span>
            </div>
            <div class="col-form-label-lg">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="col-form-label-lg">
                <label asp-for="DateInService"></label>
                <input asp-for="DateInService" class="form-control" />
                <span asp-validation-for="DateInService" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="TypeStaff"></label>
                <input asp-for="TypeStaff" class="form-control" />
                <span asp-validation-for="TypeStaff" class="text-danger"></span>
            </div>
            @{
                    int cnt = 0;
                    
                    foreach (var department in Model.DepartmentList)
                    {
                        if (cnt++ % 3 == 0)
                        {
                        @:</div><div class="row">
                        }
                        @:<div class="col-4">
                            <input type="checkbox" 
                                   name="ActiveDepartmentIds"
                                   value="@department.Id" />
                                   @: @department.Name
                        @:</div>
                    }
                @:</div>
                }
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>