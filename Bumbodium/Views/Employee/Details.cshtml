@model Employee
@using Bumbodium.Data.DBModels

<h1>Werknemer Details</h1>
<div >
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Naam
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(e => e.FullName)
        </dd>
        <dt class="col-sm-2">
            Leeftijd
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(e => e.Age)
        </dd>
        <dt class="col-sm-2">
            Geboortedatum
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(e => e.Birthdate)
        </dd>
        <dt class="col-sm-2">
            Telefoon
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(e => e.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(e => e.Email)
        </dd>
        <dt class="col-sm-2">
            Werkt sinds
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(e => e.DateInService)
        </dd>
        <dt class="col-sm-2">
            Inactief sinds
        </dt>
        <dd class="col-sm-10">
            @if (Model.DateOutService.HasValue)
            {
                @Html.DisplayFor(e => e.DateOutService)
            }
            else
            {
                <p>-</p>
            }
        </dd>
        <dt class="col-sm-2">
            Functie
        </dt>
        @if (Model.Type == TypeStaff.Manager)
        {
            <dd class="col-sm-10">
                Manager
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
                Werknemer
            </dd>
        }
        <dt class="col-sm-2">
            Afdeling(en)
        </dt>
        @foreach (DepartmentEmployee departmentEmployee in Model.PartOFDepartment)
        {

            @if (@departmentEmployee.Department.Name == DepartmentType.Fresh)
            {
                <dd class="col-sm-10">
                    Vers
                </dd>
            }
            else if (@departmentEmployee.Department.Name == DepartmentType.Checkout)
            {
                <dd class="col-sm-10">
                    Kassa
                </dd>
            }
            else if (@departmentEmployee.Department.Name == DepartmentType.Shelves)
            {
                <dd class="col-sm-10">
                    Vakkenvullen
                </dd>
            }


            <dt class="col-sm-2">
            </dt>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.EmployeeID" class="btn btn-lg btn-primary btn-outline-warning m-3">Aanpassen</a>
    <a asp-action="Index" class="btn btn-lg btn-primary btn-outline-warning">Terug</a>
</div>