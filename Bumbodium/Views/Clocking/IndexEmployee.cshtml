@model Bumbodium.WebApp.Models.ClockingView.ClockingEmployeeViewModel
@using System.Globalization;

<h1>Klock uren van @Model.EmployeeName</h1>
<br />

<div class="container justify-content-center">
    <div class="row m-0 bg-light rounded-3">
        <div class="col-lg-5 m-auto p-auto text-center">
            <form asp-action="Index" method="post">
                <input type="month" asp-for="FirstOfTheMonth" onchange="this.form.submit()" required />
            </form>
        </div>
    </div>
</div>

@if (Model.ClockingDays.Count == 0)
{
    <h1>Je hebt deze week geen uren gemaakt</h1>
}
else
{
    @foreach (var day in Model.ClockingDays)
    {
        <div class="row" style="background-color:cornflowerblue; color: white; padding: 15px; ">
            <div class="row m-auto">
                <div class="bg-light text-dark rounded-2 mb-3 p-1">
                    <p class="mb-1 pb-0 bold">@day.Key</p>
                </div>
            </div>
        </div>
    }

}

